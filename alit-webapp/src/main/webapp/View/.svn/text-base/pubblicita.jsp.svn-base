<%@ page language = "java" contentType="text/html; charset=utf-8" %><%@ include file="snippets/locale_resolver.jsp" %><%if(session.getAttribute("logged_user") == null || !session.getAttribute("logged_user").equals("true")){  response.sendRedirect(request.getContextPath() + response.encodeURL("doLog.jsp"));}%><%@ page import="  java.util.ArrayList,  java.util.ResourceBundle,  java.util.Locale,  anna.alit.beanbb.HashBean,  anna.alit.beanbb.HashBeanVector,  anna.alit.servicebb.FormServiceImpl,  anna.alit.servicebb.JspServiceImpl,  anna.alit.servicexhtml.TendineXHTML"%><% String context = request.getContextPath(); %><!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"><html xmlns="http://www.w3.org/1999/xhtml" dir="ltr"><head>  <script type="text/javascript" language="JavaScript" src="${pageContext.request.contextPath}/View/javascript/spotResult.js"></script>  <%  ResourceBundle bundle = ResourceBundle.getBundle("messages", new Locale(locale));  String text_preview = bundle.getString("msg.clicca_per_vedere_l_anteprima");  %>  <script type="text/javascript">    function chargePreviewMessage()    {      var msg = document.getElementById('testo_preview').value;      document.getElementById('diva').innerHTML='<div class="text_preview">' + msg + '</div>';      document.getElementById('divb').innerHTML='<div class="text_preview">' + msg + '</div>';    }  </script>  <jsp:include page="snippets/head.jsp" >      <jsp:param name="title" value="ttl.pubblicita" />  </jsp:include></head><body onload="chargePreviewMessage();"><div id="wrapper"><div id="wrapper_inner">  <jsp:include page="snippets/new_header.jsp"/>  <div id="main">	<div class="left" id="content">		<div id="content_inner">		  <div class="post">			<div class="post_title">			 <h2>			   <a href="#">               <fmt:message key="ttl.pubblicita"/>			   </a>			 </h2>			</div>	        <input id="testo_preview" type="hidden" value="<%= text_preview %>"/>	        <%	        HashBean beanLoggato = FormServiceImpl.getInstance().updateBeanLoggato(request);	        // FormServiceImpl.getInstance().updateBeanLoggato(request) esegue le seguenti azioni:	        // (1) Ottiene il beanLoggato dalla session se presente, lo inizializza vuoto altrimenti	        // (2) Aggiorna/caricaSpot i dati nel beanLoggato acquisendoli dalla request	        //     se si arriva da una pagina di registrazione o pubblicitÃ .	        // (3) Inserice il beanLoggato (aggiornato) nella session (session.setAttribute("beanLoggato", beanLoggato);)	        // (4) Ritorna il beanLoggato aggiornato.	        String id = "" + (Integer)session.getAttribute("idLoggato");	        %>	        <form name="regSpot" accept-charset="" action="${pageContext.request.contextPath}/Action" method="post">	        <!-- setto il parametro 'pagina' per prossimo aggiornamento del beanLoggato dalla request -->	        <input type="hidden" id="pagina" name="pagina" value="pubblicita.jsp" />	        <input type="hidden" name="actiontype" value="registraspot"/>	        <p>	          <br/>	          Pagina per l'utilizzo gratuito di due spazi pubblicitari	          visibili nella prima scheda (caratteristiche e servizi della struttura)	          e a libera disposizione del gestore della struttura stessa.	        </p>	       <div class="parent_pane">		     <div class="left_pane_spot">		       	<b>Primo spazio</b>:<br/><br/>	            <div onclick="location.href='${pageContext.request.contextPath}/View/carica.jsp?imagename=11'">	              <div class="area">	                <%	                if( JspServiceImpl.getInstance().imagePresent(id, "11") )	                {	                  %>	                  <img name="firstImage" id="firstImage" src="<%=request.getContextPath()%>/View/image.jsp?image=11&id_azienda=<%= id %>"  class="area"	                    onclick="location.href='<%= context + response.encodeURL("/View/carica.jsp?imagename=11")%>'"/>	                  <%	                }	                else	                {	                  %> <br/>inserite un'immagine<br/>di sfondo [190x70 pixel] <%	                }	                %>	              </div>	            </div>	            <br/><br/>	            <div>	              <div class="area">	                <%	                String slogan1 = beanLoggato.get("slogan1");	                if(slogan1 != null)	                  slogan1 = slogan1.trim();	                else if(request.getParameter("slogan1") != null)	                  slogan1 = request.getParameter("slogan1");	                else	                  slogan1 = "";	                if( slogan1.length() == 0)	                  slogan1 ="potete scrivere un testo [max 3 righe di circa 30 caratteri spazi inclusi]";	                %>	                <textarea rows="3" class="descri" name="slogan1" id="slogan1"	                  onclick="document.getElementById('slogan1').value =''"><%=slogan1%></textarea>	              </div>	            </div>	            <br/><br/>	            <div >	              <div class="area">	                <%	                String urlslogan1 = beanLoggato.get("urlslogan1");	                if(urlslogan1 != null)	                  urlslogan1 = urlslogan1.trim();	                else if(request.getParameter("urlslogan1") != null)	                  urlslogan1 = request.getParameter("urlslogan1");	                else	                  urlslogan1 = "";	                if(urlslogan1.length() == 0)	                  urlslogan1 ="potete aggiungere un collegamento web esterno";	                %>	                <textarea rows="3" class="descri" name="urlslogan1" id="urlslogan1"	                  onclick="document.getElementById('urlslogan1').value =''"><%=urlslogan1%></textarea>	              </div>	            </div>	            <br/><br/>	            <div class="area" onclick="getFirstAction();">	              <div class="area">	                <div id="diva" style="position: relative; width: 190px; height: 70px; text-align: center;">	                </div>	              </div>	            </div>			 </div>		     <div class="right_pane_spot">	             <b>Secondo spazio</b>:<br/><br/>	            <div onclick="location.href='<%= context + response.encodeURL("/View/carica.jsp?imagename=12")%>'">	              <div class="area">	                <%	                if( JspServiceImpl.getInstance().imagePresent(id, "12") )	                {	                  %>	                  <img name="secondImage" id="secondImage" src="<%=request.getContextPath()%>/View/image.jsp?image=12&id_azienda=<%= id %>"	                    onclick="location.href='<%= context + response.encodeURL("/View/carica.jsp?imagename=12")%>'"/>	                  <%	                }	                else	                {	                  %> <br/>inserite un'immagine<br/>di sfondo [190x70 pixel] <%	                }	                %>	              </div>	            </div>	            <br/><br/>	            <div>	              <div class="area">	                <%	                String slogan2 = beanLoggato.get("slogan2");	                if( slogan2 != null )	                  slogan2 = slogan2.trim();	                else if(request.getParameter("slogan2") != null)	                  slogan2 = request.getParameter("slogan2");	                else	                  slogan2 = "";	                if( slogan2.length() == 0 )	                  slogan2 ="potete scrivere un testo [max 3 righe di circa 30 caratteri spazi inclusi]";	                %>	                <textarea rows="3" class="descri" name="slogan2" id="slogan2"	                  onclick="document.getElementById('slogan2').value =''"><%= slogan2 %></textarea>	              </div>	            </div>	            <br/><br/>	            <div>	              <div class="area">	                <%	                String urlslogan2 = beanLoggato.get("urlslogan2");	                if(urlslogan2 != null)	                  urlslogan2 = urlslogan2.trim();	                else if(request.getParameter("urlslogan2") != null)	                  urlslogan2 = request.getParameter("urlslogan2");	                else	                  urlslogan2 = "";	                if( urlslogan2.length() == 0 )	                  urlslogan2="potete aggiungere un collegamento web esterno";	                %>	                <textarea rows="3" class="descri" name="urlslogan2" id="urlslogan2"	                  onclick="document.getElementById('urlslogan2').value =''"><%= urlslogan2 %></textarea>	              </div>	            </div>	            <br/><br/>	            <div style="text-align:center" onclick="getSecondAction();">	              <div style="text-align:center" class="area">	                <div id="divb" style="position: relative; width: 190px; height: 70px; text-align: center;">	                </div>	              </div>	            </div>	        </div>	      </div>	        <p style="clear:both">	          <br/><br/>	          <button type="submit">	            <span class="round_270"><span>registrate gli spazi pubblicitari</span></span>	          </button>	        </p>	      </form>		  </div>		</div>	 </div>     <jsp:include page="snippets/new_right.jsp">       <jsp:param name="title" value="ttl.pubblicita" />       <jsp:param name="header_text" value="hdr.banners" />     </jsp:include>     <jsp:include page="snippets/new_footer.jsp" />  </div></div></div></body></html>