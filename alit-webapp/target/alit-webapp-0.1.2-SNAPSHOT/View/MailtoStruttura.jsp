<%@ page language = "java" contentType="text/html; charset=utf-8" %><%@ include file="snippets/locale_resolver.jsp" %><%@ page import="  anna.alit.servicebb.JspServiceImpl,  anna.alit.beanbb.HashBean,  anna.alit.servicebb.GetAlloggioDataImpl,  anna.alit.beanbb.ParamsMap,  anna.alit.beanbb.ParamsMapImpl"%><% String context = request.getContextPath(); %><!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"><html xmlns="http://www.w3.org/1999/xhtml" dir="ltr"><head><jsp:include page="snippets/head.jsp" >      <jsp:param name="title" value="ttl.mailtoStruttura" />  </jsp:include></head><body><div id="wrapper"><div id="wrapper_inner">  <jsp:include page="snippets/new_header.jsp"/>  <div id="main">	<div class="left" id="content">		<div id="content_inner">		  <div class="post">			<div class="post_title">			 <h2>			   <a href="#">               <fmt:message key="ttl.mailFormStruttura"/>			   </a>			 </h2>			</div>	        <%	        HashBean hashbean = (HashBean) session.getAttribute("hashbean");	        ParamsMap params = new ParamsMapImpl();	        if(hashbean == null)	          hashbean = new HashBean();	          String denominazione = hashbean.get("denominazione");	          params.put("denominazione", denominazione);	          String header = "Gentile <b>" + denominazione +	          "</b>, avete ricevuto questo messaggio da un utente attraverso" +	          " il portale AlloggioItaliano.it.<br/>Siete pregati di rispondere alle" +	          " richieste contenute in questa e-mail e qui sotto riportate:<br/> ";	          params.put("header", header);	          params.put("id", hashbean.get("id") );	          params.put("to", hashbean.get("mail") );	          //String id_azienda = hashbean.get("id");	          //String mail = hashbean.get("mail");	          params.put("page", "View/scheda1.jsp");	          params.put("subject", "Richiesta di Informazioni sulla Vostra Struttura Ricettiva");	          session.setAttribute("params", params);	        %>	        <form class="reg1" name="inseventi" accept-charset="" action="${pageContext.request.contextPath}/MailServices" method="post">	          <p><fmt:message key="msg.alla_cortese_attenzione_del_gestore_de"/> <b><%= denominazione%></b></p>	          <textarea name="body" id="body" class="descr" cols="60" rows="25">	          </textarea>	          <br/>	          <fmt:message key="prm.il_mio_indirizzo_di_posta_elettronica_e_"/><br/>	          <input name="userMail" id="userMail" type="text" size="30"  class="smusso"/>	          <br/><br/><br/>	          <img src="${pageContext.request.contextPath}/kaptcha.jpg" />	          <br/>	          <fmt:message key="prm.digitare_i_caratteri_nell_immagine_"/>	          &nbsp;	          <input type="text" class="smusso" size="12" name="kaptcha" value="" />	          <br/>	          <p>	            <button type="submit">	              <span class="round"><span><fmt:message key="btn.invia_la_mail"/></span></span>	            </button>	          </p>	        </form>		  </div>		</div>	 </div>     <jsp:include page="snippets/new_right.jsp">       <jsp:param name="title" value="ttl.mailtoStruttura" />       <jsp:param name="header_text" value="hdr.mailtoStruttura" />     </jsp:include>     <jsp:include page="snippets/new_footer.jsp" />  </div></div></div></body></html>